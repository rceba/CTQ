<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_account_move_invoice_trac_document" name="Invoice TRAC">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="drs_sale_reports.reporte_factura_trac_template" t-lang="lang"/>
            </t>
        </t>
    </template>

    <template id="reporte_factura_trac_template" name="reporte_factura_trac">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div class="page">
                <h2 style="margin-top: -40px">
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                        <span style="color: black; font-weight: bold; font-style: italic">Invoice No. </span>
                    </span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <span t-if="o.name != '/'" t-field="o.name" class="text-black" style="font-weight: bold; font-style: italic"/>
                </h2>
                <div id="informations" class="row mt-3 mb-1">
                    <div t-attf-class="#{'col-auto col-3 mw-100' if report_type != 'html' else 'col'} mb-2"
                         t-if="o.invoice_date" name="invoice_date">
                        <t t-if="o.move_type == 'out_invoice'">
                            <strong><span style="color: black !important;">Invoice Date:</span></strong>
                        </t>
                        <t t-elif="o.move_type == 'out_refund'"><strong>Credit Note Date:</strong></t>
                        <t t-elif="o.move_type == 'out_receipt'"><strong>Receipt Date:</strong></t>
                        <t t-else=""><strong>Date:</strong></t><br/>
                        <span t-field="o.invoice_date" t-options='{"format": "dd/MMMM/yyyy"}'></span>
                    </div>
                    <div t-attf-class="#{'col-auto col-3 mw-100' if report_type != 'html' else 'col'} mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                        <strong><span style="color: black !important;">Due Date:</span></strong><br/>
                        <span t-field="o.invoice_date_due" t-options='{"format": "dd/MMMM/yyyy"}'></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3"/>
                    <div class="col-3"/>
                    <div class="col-3"/></div>
                <div class="row" style="margin-bottom:0px">
                    <div class="col-6">
                        <span style="color: black !important;">
                            <p>
                                <b>Bill to:</b>
                            </p>
                        </span>
                    </div>
                    <div class="col-6">
                        <span style="color: black !important;">
                            <p>
                                <b>Deliver to:</b>
                            </p>
                        </span>
                    </div>
                </div>
                <div class="row address">
                    <div class="col-5">
                        <div t-field="o.partner_shipping_id" t-options-widget="'contact'"/>
                    </div>
                    <div class="col-5 offset-1">
                        <div t-field="o.partner_shipping_id" t-options-widget="'contact'"/>
                    </div>
                </div>
                <div id="informations_extra" class="row mt-3 mb-1">
                    <div class="col-3 mw-100 mb-2">
                        <strong><span style="color: black !important;">Payment Type:</span></strong><br/>
                        <span t-out="o.l10n_mx_edi_payment_method_id.display_name"/>
                    </div>
                    <div class="col-3 mw-100 mb-2">
                        <strong><span style="color: black !important;">Payment terms:</span></strong><br/>
                        <span t-field="o.invoice_payment_term_id.display_name"/>
                    </div>
                </div>
                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <div class="oe_structure"></div>
                <t t-set="order_line_count" t-value="1"/>
                <t t-set="has_long_desc"
                   t-value="any(line.name and line.name.count('\n') > 30 for line in o.invoice_line_ids if line.name)"/>
                <table class="table table-sm o_main_table table-borderless" name="invoice_line_table">
                    <thead t-attf-style="#{has_long_desc and 'display: table-row-group;' or ''}">
                        <tr>
                            <th name="line_number" class="text-center" style="color: black !important;"><strong>#</strong></th>
                            <th name="th_product" class="text-center" style="color: black !important;">
                                <strong>Product</strong>
                            </th>
                            <th name="th_description" class="text-center" style="color: black !important;">
                                <strong>Description</strong>
                            </th>
                            <th name="th_quantity" class="text-center" style="color: black !important;">
                                <strong>Qty</strong>
                            </th>
                            <th name="th_uom" class="text-center" style="color: black !important;">
                                <strong>UOM</strong>
                            </th>
                            <th name="th_priceunit" class="text-center" style="color: black !important;">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_subtotal" class="text-center" style="color: black !important;">
                                <strong>Subtotal</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="current_total" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                            <t t-set="current_total" t-value="current_total + line.price_total"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                    <td name="line_number" class="text-center">
                                        <span t-out="order_line_count"/>
                                    </td>
                                    <td name="line_product">
                                        <span t-field="line.product_id.display_name"/>
                                    </td>
                                    <td id="line_description">
                                        <span t-raw="line.name" t-options="{'widget': 'html'}"/>
                                        <t t-set="custom_numbers" t-value="line._l10n_mx_edi_get_custom_numbers()"/>
                                        <t t-if="custom_numbers">
                                            <br/>Customs:
                                            <ul>
                                                <t t-foreach="custom_numbers" t-as="custom_number">
                                                    <li>
                                                        <span t-out="custom_number"/>
                                                    </li>
                                                </t>
                                            </ul>
                                        </t>
                                    </td>
                                    <td name="td_quantity" class="text-end">
                                        <span t-field="line.quantity"></span>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.product_uom_id"></span>
                                    </td>
                                    <td name="td_price_unit"
                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="line.price_unit"></span>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal"></span>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-if="line.name" t-field="line.name" t-options="{'widget': 'html'}">A
                                            section title</span>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-if="line.name" t-field="line.name" t-options="{'widget': 'html'}">A
                                            note, whose content usually applies to the section or product above.</span>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-out="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'></span>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="line.display_type == 'product'">
                                <t t-set="order_line_count" t-value="order_line_count + 1"/>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div>
                    <div class="row">
                        <div class="col-7"></div>
                        <div id="right-elements"
                             t-attf-class="col-5">
                            <div id="total" class="clearfix row">
                                <div class="ms-auto">
                                    <table class="table table-sm table-borderless avoid-page-break-inside">
                                        <t t-set="tax_totals" t-value="o.tax_totals or {}"/>
                                        <t t-call="account.document_tax_totals"/>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="payment_term" class="clearfix">
                        <div class="row mb-2">
                            <div class="col-2">
                                <span><strong>Currency:</strong><br/></span>
                                <span t-field="o.currency_id.display_name"/>
                            </div>
                            <div class="col-2">
                                <span><strong>Reference:</strong><br/></span>
                                <span t-field="o.payment_reference"/>
                            </div>
                            <div class="col-2">
                                <span><strong>Incoterm:</strong><br/></span>
                                <span t-field="o.invoice_incoterm_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="acount_move_invoice_trac_document_action_report" model="ir.actions.report">
        <field name="name">Facturas Trac</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">drs_sale_reports.report_account_move_invoice_trac_document</field>
        <field name="report_file">drs_sale_reports.report_account_move_invoice_trac_document</field>
        <field name="print_report_name">'%s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="drs_sale_reports.paperformat_reports_drs_sale"/>
    </record>
</odoo>