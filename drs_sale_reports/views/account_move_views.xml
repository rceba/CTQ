<odoo>
    <record id="account_move_form_inherit_l10n_mx_edi" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n_mx_edi</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_mx_edi.account_move_form_inherit_l10n_mx_edi"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_mx_edi_payment_method_id']" position="after">
                <field name="foreign_payment_method_id" invisible="country_code=='MX'" options="{'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>