<odoo>
    <record id="sale.action_report_saleorder" model="ir.actions.report">
        <field name="paperformat_id" ref="drs_sale_reports.paperformat_reports_drs_sale"/>
    </record>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='expiration_date']/strong" position="replace">
            <strong>Expiration date:</strong>
        </xpath>
        <xpath expr="//div[@name='expiration_date']//span[1]" position="replace">
            <span class="m-0" t-field="doc.validity_date" t-options='{"format": "dd/MMMM/yyyy"}'/>
        </xpath>
        <xpath expr="//div[@name='informations_date']//span[1]" position="replace">
            <span class="m-0" t-field="doc.date_order" t-options='{"format": "dd/MMMM/yyyy"}'/>
        </xpath>
        <xpath expr="//div[@id='informations']//span[@t-field='doc.user_id']/preceding-sibling::strong[1]" position="replace">
            <strong><span>Salesperson:</span></strong>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-center">QTY</th>
        </xpath>
        <xpath expr="//th[@name='th_priceunit']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_subtotal']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
    </template>
    <template id="report_saleorder_document_drs_sale" inherit_id="drs_sale.report_saleorder_document">
        <xpath expr="//div[@id='partner_number']" position="attributes">
            <attribute name="style">margin-top: -40px !important;</attribute>
        </xpath>
        <xpath expr="//span[@t-field='doc.name']" position="attributes">
            <attribute name="style">color: black !important;font-style: italic;</attribute>
        </xpath>
        <xpath expr="//span[2]" position="attributes">
            <attribute name="style">color: black !important;font-style: italic;</attribute>
        </xpath>
        <xpath expr="//th[@name='branch']" position="replace">
            <th name="branch" class="text-center">BRAND</th>
        </xpath>
        <xpath expr="//th[@name='imagen']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//th[@name='product']" position="attributes">
            <attribute name="class">text-center</attribute>
        </xpath>
        <xpath expr="//div[@name='currency_id']//.." position="replace">
            <div class="mt-4 mb-2">
                <div t-if="doc.currency_id" class="mb-2" name="currency_id">
                    <strong><span>Currency:</span></strong><br/>
                    <span class="m-0" t-field="doc.currency_id"></span>
                </div>
                <div t-if="doc.payment_term_id" class="mb-2" name="payment_term_id">
                    <strong><span>Payment terms:</span></strong><br/>
                    <span class="m-0" t-field="doc.payment_term_id"></span>
                </div>
            </div>
        </xpath>
    </template>
</odoo>